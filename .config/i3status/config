}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
#order += "battery all"
order += "read_file mouse"
order += "read_file keyboard"
order += "disk /"
order += "disk /home/lube"
order += "memory"
order += "cpu_usage" 
